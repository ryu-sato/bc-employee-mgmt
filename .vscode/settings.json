// 既定の設定とユーザー設定を上書きするには、このファイル内に設定を挿入します
{
  // タブ 1 つに相当するスペースの数。
  "editor.tabSize": 2,

  // 有効にすると、ファイルの保存時に末尾の空白をトリミングします。
  "files.trimTrailingWhitespace": true,
  // 有効にすると、ファイルの保存時に最新の行を末尾に挿入します。
  "files.insertFinalNewline": true,
  // 既定の改行文字。LF の場合には \n を CRLF の場合には \r\n を使用してください。
  "files.eol": "\n",

  // 言語に対するファイルの関連付け (例: `"*.extension": "html") を構成します。これらの関連付けは、インストールされている言語の既定の関連付けより優先されます。
  "files.associations": {
    ".erdconfig": "yaml"
  },

  // ワークベンチで使用するアイコンのテーマを指定します。'null' を指定するとファイル アイコンが表示されなくなります。
  "workbench.iconTheme": "vscode-icons",

  // Method to use for intellisense (go to definition, etc.). Use `false` to disable or if another extension provides this feature.
  "ruby.intellisense": "rubyLocate",
  // Defines where the Ruby extension will look to find Modules, Classes and methods.
  "ruby.locate": {
    "include": "**/*.rb",
    "exclude": "{**/@(test|spec|tmp|misc|.*),**/@(test|spec|tmp|misc|.*)/**,**/*_spec.rb}"
  },
  // Whether ruby tools should be started using Bundler
  "ruby.useBundler": true,
  // Use built-in language server
  "ruby.useLanguageServer": true,

  // Automatically check if a new version of the Solargraph gem is available.
  "solargraph.checkGemVersion": false,
  // Use `bundle exec` to run solargraph. (If this is true, the solargraph.commandPath setting is ignored.)
  "solargraph.useBundler": true,
  // Enable definitions (go to, etc.)
  "solargraph.definitions": true,
  // Enable diagnostics
  "solargraph.diagnostics": true,
  // Enable document formatting
  "solargraph.formatting": true,

  // Show active bracket scope in gutter?
  "bracketPairColorizer.showBracketsInGutter": true,
  // Show active bracket scope in ruler?
  "bracketPairColorizer.showBracketsInRuler": true,
}
