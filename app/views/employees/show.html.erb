<h1><%= @employee.name %></h1>

<% if notice.present? %>
  <p class="alert alert-success"><%= notice %></p>
<% end %>

<div class="ml-3">
  <div class="row">
    <div class="col-2"><label><%= Employee.human_attribute_name(:name) %></label></div>
    <div class="col-3"><%= @employee.name %></div>
  </div>

  <div class="row">
    <div class="col-2"><label><%= Employee.human_attribute_name(:department) %></label></div>
    <div class="col-3"><%= @employee.department %></div>
  </div>

  <div class="row">
    <div class="col-2"><label><%= Employee.human_attribute_name(:gender) %></label></div>
    <div class="col-3"><%= @employee.gender %></div>
  </div>

  <div class="row">
    <div class="col-2"><label><%= Employee.human_attribute_name(:birth) %></label></div>
    <div class="col-3"><%= @employee.birth %></div>
  </div>

  <div class="row">
    <div class="col-2"><label><%= Employee.human_attribute_name(:years_worked) %></label></div>
    <div class="col-3"><%= @employee.years_worked %></div>
  </div>

  <div class="row">
    <div class="col-2"><label><%= Employee.human_attribute_name(:payment) %></label></div>
    <div class="col-3"><%= @employee.payment %></div>
  </div>

  <div class="row">
    <div class="col-2"><label><%= Employee.human_attribute_name(:note) %></label></div>
    <div class="col-3"><%= @employee.note %></div>
  </div>
</div>

<%= link_to t('action.edit', default: 'Edit'), edit_employee_path(@employee), class: 'btn btn-link' %> |
<%= link_to t('action.back', default: 'Back'), employees_path, class: 'btn btn-link' %>
