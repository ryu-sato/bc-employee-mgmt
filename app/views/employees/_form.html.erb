<%= form_with(model: employee, local: true) do |form| %>
  <% if employee.errors.any? %>
    <div class="alert alert-warning" role="alert">
      <h4><%= pluralize(employee.errors.count, "error") %> prohibited this employee from being saved:</h4>

      <ul>
        <% employee.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group row">
    <div class="col-sm-2 ">
      <%= form.label :name, class: "col-form-label" %>
    </div>
    <div class="col-sm-10">
      <%= form.text_field :name, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-sm-2 ">
      <%= form.label :department, class: "col-form-label" %>
    </div>
    <div class="col-sm-10">
      <%= form.text_field :department, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-sm-2 ">
      <%= form.label :gender, class: "col-form-label" %>
    </div>
    <div class="col-sm-10">
      <%= form.select :gender, Employee.genders.keys.map {|k| [Employee.genders_i18n[k], k] }, { include_blank: true }, { class: "form-control" } %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-sm-2 ">
      <%= form.label :birth, class: "col-form-label" %>
    </div>
    <%# locale を ja にした場合、date_select における月がアルファベット1文字になってしまうため、数字で表示する %>
    <div class="col-sm-10 form-inline">
      <%= form.date_select :birth, { use_month_numbers: true, start_year: Date.today.year - 150, default: Date.new(Date.today.year - 22, 1, 1) }, { class: "form-control" } %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-sm-2 ">
      <%= form.label :joined_date, class: "col-form-label" %>
    </div>
    <%# locale を ja にした場合、date_select における月がアルファベット1文字になってしまうため、数字で表示する %>
    <div class="col-sm-10 form-inline">
      <%= form.date_select :joined_date, { use_month_numbers: true, start_year: Date.today.year - 150 }, { class: "form-control" } %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-sm-2 ">
      <%= form.label :payment, class: "col-form-label" %>
    </div>
    <div class="col-sm-10">
      <%= form.text_field :payment, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-sm-2 ">
      <%= form.label :note, class: "col-form-label" %>
    </div>
    <div class="col-sm-10">
      <%= form.text_area :note, class: "form-control" %>
    </div>
  </div>

  <%= form.submit class: "btn btn-primary" %>
<% end %>
