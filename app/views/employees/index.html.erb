<%= javascript_pack_tag "employees/index.js" %>

<p id="notice"><%= notice %></p>

<h1><%= Employee.model_name.human %></h1>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th><%= Employee.human_attribute_name(:name) %></th>
      <th><%= Employee.human_attribute_name(:department) %></th>
      <th><%= Employee.human_attribute_name(:years_worked) %>
      <th><%= Employee.human_attribute_name(:gender) %></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @employees.each do |employee| %>
      <tr>
        <td><%= employee.id %></td>
        <td><%= employee.name %></td>
        <td><%= employee.department %></td>
        <td><%= employee.years_worked %></td>
        <td><%= employee.gender %></td>
        <td>
          <%= link_to t('action.show', default: 'Show'), employee %>
          <%= link_to t('action.edit', default: 'Edit'), edit_employee_path(employee) %>
        </td>
      </tr>
    <% end %>
  </tbody>

  <tfoot>
    <tr>
      <th>ID</th>
      <th><%= Employee.human_attribute_name(:name) %></th>
      <th><%= Employee.human_attribute_name(:department) %></th>
      <th><%= Employee.human_attribute_name(:years_worked) %>
      <th><%= Employee.human_attribute_name(:gender) %></th>
      <th></th>
    </tr>
  </tfoot>
</table>

<br>

<%= link_to t('.action.new_employee', default: 'New Employee'), new_employee_path %>
